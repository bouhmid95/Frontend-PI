@model IEnumerable<Frontend_PI.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publicationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publicationDate)
        </td>
        <td>
            <div class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.id }) </div>|
            <div class="btn btn-success">@Html.ActionLink("Details", "Details", new { id = item.id }) </div>|
            <div class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.id })</div>
        </td>
    </tr>
}

</table>
